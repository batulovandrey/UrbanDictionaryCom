<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:editTextColor">@color/colorWhite</item>
        <item name="cardViewStyle">@style/UrbanCardView</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="searchViewStyle">@style/SearchViewTheme</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="UrbanTheme" parent="AppTheme" >
        <item name="colorPrimary">@color/background</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textViewStyle">@style/UrbanTextView</item>
        <item name="textViewStyleGeneral">@style/UrbanTextViewGeneral</item>
        <item name="cardViewStyle">@style/UrbanCardView</item>
        <item name="backgroundColor">@color/background</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="DarkTheme" parent="AppTheme" >
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textViewStyle">@style/DarkTextView</item>
        <item name="textViewStyleGeneral">@style/DarkTextViewGeneral</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="cardViewStyle">@style/DarkCardView</item>
        <item name="background">@android:color/black</item>
        <item name="navigationViewStyle">@style/DarkNavigationView</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="AppTheme.Launcher" parent="AppTheme">
        <item name="android:windowBackground">@xml/launch_screen</item>
    </style>

    <style name="SearchViewTheme" parent="Widget.AppCompat.SearchView">
        <item name="closeIcon">@drawable/abc_ic_clear_material_white</item>
        <item name="searchIcon">@drawable/abc_search_api_material_white</item>
        <item name="searchHintIcon">@drawable/abc_search_api_material_white</item>
        <item name="goIcon">@drawable/abc_search_api_material_white</item>
    </style>

    <style name="UrbanCardView" parent="CardView">
        <item name="cardBackgroundColor">@color/cardview_light_background</item>
    </style>

    <style name="DarkCardView" parent="CardView">
        <item name="cardBackgroundColor">@color/cardview_dark_background</item>
    </style>

    <style name="UrbanTextView" parent="@android:style/TextAppearance">

        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Title</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="UrbanTextViewGeneral" parent="@android:style/TextAppearance">

        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Title</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>

    </style>

    <style name="DarkTextView" parent="@android:style/TextAppearance">

        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Title</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="DarkTextViewGeneral" parent="@android:style/TextAppearance">

        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Title</item>
        <item name="android:textColor">@color/colorNearWhite</item>

    </style>

    <style name="NavigationView" parent="Widget.Design.NavigationView">
    </style>

    <style name="DarkNavigationView" parent="Widget.Design.NavigationView">
        <item name="android:background">@color/colorGray</item>
        <item name="android:actionMenuTextColor">@color/colorWhite</item>
        <item name="android:textColorPrimary">@color/colorNearWhite</item>
        <item name="android:title">@color/colorNearWhite</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

</resources>